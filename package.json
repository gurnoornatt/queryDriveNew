{
  "name": "courier-optimizer",
  "version": "1.0.0",
  "description": "A lightweight backend service that helps restaurants reduce delivery costs by automatically choosing the cheaper courier",
  "main": "dist/index.js",
  "scripts": {
    "dev": "/usr/local/bin/tsc -w & node --watch dist/index.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:safe": "ts-node src/scripts/check-port.ts && npm run start",
    "start:clean": "bash src/scripts/start-server.sh",
    "fix:auth": "bash src/scripts/fix-doordash-auth.sh",
    "lint": "eslint --ext .ts .",
    "format": "prettier --write \"**/*.{ts,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:doordash": "ts-node src/scripts/test-doordash-sdk.ts",
    "test:doordash-webhook": "bash src/scripts/test-doordash-webhook.sh",
    "test:uber": "ts-node src/scripts/test-uber-direct.ts",
    "test:restaurant": "ts-node src/scripts/test-restaurant-api.ts",
    "test:restaurant-sdk": "ts-node src/scripts/test-restaurant-sdk.ts",
    "test:restaurant-sdk-client": "ts-node src/scripts/test-restaurant-sdk-client.ts",
    "test:unified-client": "ts-node src/scripts/test-unified-client.ts",
    "test:direct-api": "ts-node src/scripts/test-direct-api.ts",
    "check:credentials": "ts-node src/scripts/check-doordash-credentials.ts",
    "check:uber:credentials": "ts-node src/scripts/check-uber-credentials.ts",
    "check:auth:perplexity": "ts-node src/scripts/check-doordash-auth-perplexity.ts",
    "check:port": "ts-node src/scripts/check-port.ts"
  },
  "keywords": [
    "delivery",
    "doordash",
    "uber",
    "courier",
    "optimization"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@doordash/sdk": "0.4.6",
    "@supabase/supabase-js": "^2.39.8",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.7",
    "dotenv": "^16.4.5",
    "express": "^4.19.1",
    "jsonwebtoken": "^9.0.2",
    "opentelemetry": "^0.1.0",
    "uuid": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.3",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vitest/coverage-v8": "^1.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "msw": "^2.2.5",
    "prettier": "^3.2.5",
    "typescript": "^5.8.3",
    "vitest": "^1.4.0"
  }
}
